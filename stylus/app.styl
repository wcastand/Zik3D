flexify(direction)
  display: -webkit-flex
  display: flex
  -webkit-flex-direction: direction
  flex-direction: direction
  -webkit-align-items: center
  align-items: center
  -webkit-justify-content: center
  justify-content: center

animation(name, duration, easing, repeat, delay)
  animation: name duration easing repeat delay
  -webkit-animation: name duration easing repeat delay
  -moz-animation: name duration easing repeat delay
  -ms-animation: name duration easing repeat delay

body
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  margin 0
  padding 0
  font-family helvetica
  font-size 16px
  background-color #171718
.wrapper
  position relative
  top 0
  left 0
  width 100%
  height 100%
  margin 0
  padding 0
  canvas
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    margin 0
    padding 0
    background-color #171718
.controls
  position absolute
  top 10px
  left 230px
  height 50px
  line-height 50px
  color #fff
  font-size 2em
  z-index: 9997
  div
    display inline-block
.dropzone
  position absolute
  top 10px
  left 10px
  border-radius 4px
  width 200px
  height 50px
  background-color: #202020
  flexify(row)
  z-index: 9999
  span
    display flex
    color #fff
    font-size 1.2em

.container
  visibility hidden
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  margin 0
  padding 0
  background-color #171718
  z-index: 9998
  flexify(row)
  .loader
    position relative
    padding 0px
    margin 0px auto
    width 50px
    height 50px
    .cube
      position absolute
      width 10px
      height 10px
      background-color: #fff
      &:nth-of-type(1)
        animation turnO 2s linear infinite 0
        top 0px
      &:nth-of-type(2)
        animation turnT 2s linear infinite 0
        bottom 0px
      &:nth-of-type(3)
        animation turnTr 2s linear infinite 0
        right 0px
      &:nth-of-type(4)
        animation turnF 2s linear infinite 0
        left 0px

@keyframes turnO {
  0% {
    width 10px
    left 0px
  }
  60%{
    width 50px
    left 0px
  }
  90%{
    width 10px
    left 40px
  }
  100%{
    width 10px
    left 40px
  }
}

@keyframes turnT {
  0% {
    width 10px
    right 0px
  }
  60%{
    width 50px
    right 0px
  }
  90%{
    width 10px
    right 40px
  }
  100%{
    width 10px
    right 40px
  }
}

@keyframes turnTr {
  0% {
    height: 10px
    top 0px
  }
  60%{
    height: 50px
    top 0px
  }
  90%{
    height: 10px
    top 40px
  }
  100%{
    height: 10px
    top 40px
  }
}

@keyframes turnF {
  0% {
    height: 10px
    bottom 0px
  }
  60%{
    height: 50px
    bottom 0px
  }
  90%{
    height: 10px
    bottom 40px
  }
  100%{
    height: 10px
    bottom 40px
  }
}
